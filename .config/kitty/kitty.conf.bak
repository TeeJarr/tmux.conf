# vim:fileencoding=utf-8:foldmethod=marker

include ~/dotfiles/.config/kitty/themes/black_metal_gorgoroth.conf

allow_remote_control yes

[font]
# font_family family "JetBrains Mono NL"
# bold_font  					auto
# italic_font  				auto
# bold_italic_font  	auto
font_size 					20

[cursor]
cursor_trail 10
cursor_trail_start_threshold 1
shell_integration no-cursor
cursor_trail_decay 0.01 0.3
cursor_shape block
cursor_blink true

[window]
dynamic_background_opacity yes
hide_window_decorations titlebar-only	
# active_border_color #00ff00
window_padding_width 10
# window_padding_height 10
window_margin_height 20
background_opacity 0.8
# window_margin_width 22 0 0 0
background_blur 40
placement_strategy top

[binds]
map super+u           set_background_opacity 1.85
map super+shift+u     set_background_opacity default


# BEGIN_KITTY_THEME
# Active-Theme
include current-theme.conf
# END_KITTY_THEME


# BEGIN_KITTY_FONTS
font_family      family="JetBrains Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
