# vim:fileencoding=utf-8:foldmethod=marker

include ~/dotfiles/.config/kitty/themes/black_metal_gorgoroth.conf
# include ~/dotfiles/.config/kitty/themes/cyberdream.conf

allow_remote_control yes

[font]
font_size 26
text_composition_strategy legacy
modify_font_cell_width 95%

[cursor]
cursor_trail 10
cursor_trail_start_threshold 1
shell_integration no-cursor
cursor_trail_decay 0.1 0.3
cursor_shape block
cursor_blink true

[window]
dynamic_background_opacity yes
hide_window_decorations titlebar-and-corners
window_padding_width 8
# window_padding_height 10
background_opacity 0.85
window_margin_height 0
background_blur 30
placement_strategy top
# window_border_width 0.5pt
# draw_minimal_borders yes

[binds]
map super+u           set_background_opacity 1
map super+shift+u     set_background_opacity default


# BEGIN_KITTY_THEME
# Catppuccin-Macchiato
# include current-theme.conf
# END_KITTY_THEME


# BEGIN_KITTY_FONTS
font_family      family="JetBrains Mono NL"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
